@model Dish
@{
    ViewData["Title"] = "New Dish";
}

<style>
    .custom-card {
        border: 8px solid #ff1493; 
    }

    .custom-header {
        background-color: #ff69b4; 
        color: white; 
    }
</style>


<div class="container mt-4">
    <div class="card custom-card">
        <div class="card-header custom-header">
            <h1 class="display-4">Add a New Dish</h1>
        </div>


        <div class="card-body">
            <form asp-action="CreateDish" asp-controller="Dish" method="POST">

                <div class="mb-3">
                    <label asp-for="Chef"> Chef's Name: </label>
                    <input asp-for="Chef" class="form-control">
                    <span asp-validation-for="Chef" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DishName"> Name of Dish: </label>
                    <input asp-for="DishName" class="form-control">
                    <span asp-validation-for="DishName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Calories"> # of Calories: </label>
                    <input asp-for="Calories" class="form-control">
                    <span asp-validation-for="Calories" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Tastiness">Tastiness: </label>
                    <select name="Tastiness" class="form-select">
                        <option value="">Select Level</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <span asp-validation-for="Tastiness" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Description"> Description: </label>
                    <textarea name="Description" rows="3" cols="30" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <button class="btn btn-primary">Submit</button>

            </form>
        </div>
    </div>
</div>
